<%= form_tag suggestions_path, method: :get do %>
  <%= label_tag :query, "Food Craving" %>
  <%= text_field_tag :query, '', :required => true %>

  <%= label_tag :limit %>
  <%= number_field_tag :limit, '', :required => true, min: 1, max: 100 %>

  <%= submit_tag %>
<% end %>

<% if @suggestions %>
  <% @suggestions.each do |suggestion| %>
    <%= render partial: "shared/suggestions", locals: { partial_variable: suggestion } %>
  <% end %>
<% end %>
